    type="result">
    <command xmlns="http://jabber.org/protocol/commands"
        status="completed"
        node="http://jabber.org/protocol/admin#delete-user">
        <x xmlns="jabber:x:data" type="result">
            <field type="text-multi" var="Errors">
                <value></value>
            </field>
        </x>
    </command>
</iq>
}

