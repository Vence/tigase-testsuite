send: {
<iq id="del-user-1"
    from="$(from-jid)"
    to="$(to-jid)"
    type="set">
    <command xmlns="http://jabber.org/protocol/commands"
             node="http://jabber.org/protocol/admin#delete-user" />
</iq>
}




expect: {
<iq id="del-user-1"
    from="$(to-jid)"
    to="$(from-jid)"
    type="result">
    <command
        xmlns="http://jabber.org/protocol/commands"
        node="http://jabber.org/protocol/admin#delete-user"
        status="executing">
        <x xmlns="jabber:x:data" type="form">
            <title>Deleting a User</title>
            <instructions>Fill out this form to delete a user.</instructions>
            <field type="hidden" var="FORM_TYPE">
                <value>http://jabber.org/protocol/admin</value>
            </field>
            <field type="jid-multi" label="The Jabber ID(s) to delete" var="accountjids">
                <value/>
            </field>
        </x>
        <actions execute="complete">
            <complete/>
        </actions>
    </command>
</iq>
}

send: {
<iq id="del-user-1"
    from="$(from-jid)"
    to="$(to-jid)"
    type="set">
    <command
        xmlns="http://jabber.org/protocol/commands"
        node="http://jabber.org/protocol/admin#delete-user">
        <x xmlns="jabber:x:data" type="submit">
            <field type="hidden" var="FORM_TYPE">
                <value>http://jabber.org/protocol/admin</value>
            </field>
            <field type="jid-multi" var="accountjids">
                <value>$(cdata)</value>
            </field>
        </x>
    </command>
</iq>
}


# Expecting error

